@Model foodweb.Models.Food
@{
    ViewBag.Title = "Update";
}

<style>
    td {
        color: #F44C41;
        font-size: large;
        margin-left: 100px;
    }

    input[type=submit] {
        background-color: #F44C41; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 8px;
    }
</style>
<body>
    <h2 style="text-align: center; color: #F44C41;">Update Menu Item</h2><br /><br /><br /><br />

    <form action="/Home/UpdateConfirm/@Model.Id" method="post">
        <input style="padding: 12px 20px;" type="text" name="tfn" size="30" value=@Model.DishName />
        <input style="padding: 12px 20px;" type="text" name="tfp" size="30" value=@Model.Price />
        <input type="submit" name=" add" value="Update">
    </form>
</body>